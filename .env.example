# Flask Configuration
FLASK_APP=app.py
# Use FLASK_DEBUG instead of deprecated FLASK_ENV
FLASK_DEBUG=0
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Database Configuration (AWS RDS PostgreSQL)
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_NAME=ctf_database

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-admin-password-in-production
ADMIN_EMAIL=admin@ctf.local

# Server Configuration
PORT=5000
ADMIN_PORT=5001
DEBUG=False

# Optional AWS Integrations (Free-Tier Friendly)
# Region for AWS clients
AWS_REGION=us-east-1

# S3 bucket for challenge attachments (enable presigned upload/download routes)
# Example: S3_BUCKET=flagrush-attachments-<yoursuffix>
S3_BUCKET=

# SQS queue URL to publish 'challenge solved' events (optional)
SQS_QUEUE_URL=

# Dedicated SQS queue for audit logging of flag submissions (optional)
SQS_AUDIT_QUEUE_URL=

# If true, include the plaintext flag in 'challenge_solved' SQS events (use with care)
SQS_INCLUDE_PLAINTEXT_FLAG_ON_SOLVE=False

# Enable AWS X-Ray tracing (requires X-Ray daemon/agent)
AWS_XRAY_ENABLED=False

# CORS: allow frontend origin(s). Comma-separated list, e.g., http://frontend.example.com,https://www.example.com
CORS_ALLOW_ORIGINS=
